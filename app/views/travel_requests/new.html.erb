  </div>

  <div id="kakutei_date_field" style="display: none;">
    <%= form.label :KakuteiDate, "確定日", for: "kakutei_date_input" %>
    <%= form.text_field :KakuteiDate, id: "kakutei_date_input", readonly: true %>
  </div>

<hr>
